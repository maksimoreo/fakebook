<h1 class="title has-text-centered">Create new post</h1>

<div>
  <% unless @post.errors.empty? %>
    <p>
      <%= @post.errors.count %> Errors:
      <ul>
        <% @post.errors.full_messages.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    </p>
  <% end %>

  <%= form_with model: @post, local: true do |f| %>
    <div class="field">
      <%= f.label :text, class: 'label' %>
      <div class="control">
        <%= f.text_area :text, class: 'textarea' %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <div class="buttons is-right">
          <button class="button is-primary" type="submit">Create Post</button>
        </div>
      </div>
    </div>
  <% end %>
</div>
