<%= form_with model: [@comment.post, @comment] do |f| %>
  <div class="field">
    <div class="control">
      <%= f.text_area :text, class: 'textarea', placeholder: 'Your Message' %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <button class="button is-primary is-fullwidth" type="submit"><%= @comment.new_record? ? 'Add Comment' : 'Save' %></button>
    </div>
  </div>
<% end %>
