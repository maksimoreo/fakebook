<div class="columns">
  <div class="column is-4 is-offset-4 has-shadow">
    <h1 class="title has-text-centered">Sign up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :username, class: 'label' %>
        <div class="control has-icons-left">
          <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: 'Username', class: "input" %>
          <span class="icon is-small is-left">
            <i class="fas fa-user"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <div class="control has-icons-left">
          <%= f.text_field :email, autocomplete: "email", placeholder: 'Email', class: "input" %>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, class: 'label' %>
        <div class="control has-icons-left">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: "input" %>
          <span class="icon is-small is-left">
            <i class="fas fa-key"></i>
          </span>
        </div>
        <% if @minimum_password_length %>
        <p class="help">(<%= @minimum_password_length %> characters minimum)</p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'label' %>
        <div class="control has-icons-left">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Confirm password', class: "input" %>
          <span class="icon is-small is-left">
            <i class="fas fa-key"></i>
          </span>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <div class="control">
            <%= f.label :remember_me, class: 'checkbox' do %>
              <%= f.check_box :remember_me %>
              Remember me
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="field">
        <div class="control">
          <%= f.submit "Sign up", class: 'button is-link is-fullwidth' %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
